<%= form_with model: @task do |f| %>


<div class="container">
<h1>Create a new Task</h1>
 <div class="form-group row">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
   <div class="form-group row">
  <%= f.label :details %>
  <%= f.text_field :details %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

</div>
