<div class="container">

<h1>Task</h1>

<h2><%= @task.title %></h2>

<p class="details"><%= @task.details.capitalize %></p>
<% if @task.completed == true %>
  <p><i class="far fa-check-square"></i> This task is completed.</p>
<% else %>
  <p><i class="far fa-square"></i> This task is not completed.</p>
<% end %>
<ul>
<li><%= link_to 'Edit Task', tasks_edit_path %></li>

<li><%= link_to 'Back to Tasks', tasks_path %></li>

<%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?"} do %>
          <i class="fa-regular fa-trash-can"></i>
  <% end %>
</ul>

</div>
